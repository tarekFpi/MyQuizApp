<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:paddingBottom="@dimen/_12sdp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/exit_icon"/>

        <TextView
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_width="wrap_content"
            android:text="Are you sure you want to exit \n your quiz?"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/text_question"
            android:textColor="#000000"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="#FBF3F4"
                android:id="@+id/btn_NoExitQuiz"
                android:elevation="@dimen/_4sdp"
                android:padding="@dimen/_12sdp"
                app:cornerRadius="@dimen/_12sdp"
                android:text="NO"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="true"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/appColors"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="#BE1E2D"
                android:id="@+id/btn_YesExitQuiz"
                android:padding="@dimen/_12sdp"
                app:cornerRadius="@dimen/_10sdp"
                android:text="YES"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="true"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>